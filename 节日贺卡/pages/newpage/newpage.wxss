/* pages/greetingCardTemplate/greetingCardTemplate.wxss */

/* 图片自己撑高度 */
.containerCard{
    overflow: hidden;
    height: 100%;
    /* border: 1px solid red;    */
}
.card{
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    /* height:1210rpx; */
}
.card image{
  width:100%;
  height:100%;
}
.underlying{
    width:100%;
    z-index: 1;
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: center;
    /* padding-bottom:60rpx; */
    /* justify-content: center; */
}
.choose-last{
    width:200rpx;
    height:80rpx;
    border: 1px solid lightgray;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size:36rpx;
    margin-left: 30rpx; 
    background: white;
}
.choose-next{
    width:200rpx;
    height:80rpx;
    border: 1px solid #FFEA55;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size:36rpx;
    margin-left:290rpx;
     
}
.space{
  height:0rpx;
}
.longpress{
  position: absolute; 
  right: 34rpx; 
  top: 35rpx; 
  font-size: 30rpx;
  background-color: #fff;
  border-radius: 9px;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
/* 往下是选择音乐的CSS */
.chooseMusic{
    position:absolute;
    right:11px;
    top:106px;
    width:55px;
    text-align:center;
    z-index:999;
}

.musiclist{
  width:55px;
  height:55px;
  background:rgba(205,201,201,0.8);
  border:1px solid lightslategray;
  border-radius: 50%;
  line-height:55px;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
}