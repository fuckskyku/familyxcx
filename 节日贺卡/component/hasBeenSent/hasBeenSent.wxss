/* component/hasBeenSent/hasBeenSent.wxss */
.theTheme{
    width: 330rpx;
    height: 420rpx;
    background-color: #98A7AE;
    margin-top: 30rpx;
    position: relative;
}
.theTheme image{
    width: 330rpx;
    height: 420rpx;
}
.theText{
    display: flex;
    flex-direction: column;
    align-items: center;
  
}
.happy{
    font-size:36rpx;
    color: #333333;
}
.time{
    font-size:28rpx;
    color: #808080;
   
}
.theTitle{
    display: flex;
    flex-direction: column;
    margin-top: 15rpx;
}
.modal{
    width: 330rpx;
    height: 420rpx;
    position: absolute;
    background-color: rgba(170, 164, 164, 0.3);
    position: relative;
}
.remove{
    width: 90rpx;
    height: 90rpx;
    border-radius: 50px;
    background-color: #000;
    position: absolute;
    top:180rpx;
    left: 130rpx;
    position: relative;
    z-index: 1;
}
.removeImg{
    width:44rpx;
    height:44rpx;
    position: absolute;
    top:22rpx;
    left: 25rpx;
}
